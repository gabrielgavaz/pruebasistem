<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
   <Dialog id="dialog" title="Ingresar Datos">


       <content>
            <f:SimpleForm id="form" editable="true" layout="ResponsiveGridLayout">
               <f:content>

                    <Label text="{i18n>nameState}" />
                    <Input id="nameEstadoInput" type="Text" />

                    <Label text="{i18n>capital}" />
                    <Input id="capitalEstadoInput" type="Text" />

                   
                    <Label text="{i18n>population}" />
                    <Input id="poblacionEstadoInput" type="Number" />

                    <Label text="{i18n>surface}" />
                    <Input id="superficieEstadoInput" type="Number" />

                    <Label text="{i18n>pointsOfInterest}" />
                    <Input id="puntosdeinteresEstadoInput" type="Text" />
 
                    <Label text="{i18n>description}" />
                    <Input id="descripcionEstadoInput" type="Text" />                  


                </f:content>
            </f:SimpleForm>
        </content>


       <beginButton>
            <Button text="{i18n>insert}" press="onCreateState" />
        </beginButton>
       <endButton>
            <Button text="{i18n>cancel}" press="onCloseDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>